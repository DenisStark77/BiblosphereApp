{
  "functions": {
    "predeploy": [
      "npm --prefix \"%RESOURCE_DIR%\" run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/updateUsers", "function": "updateUsers"
      },
      {
        "source": "/detectBooks", "function": "detectBooks"
      },
      {
        "source": "/detectLanguage", "function": "detectLanguage"
      },
      {
        "source": "/userNames", "function": "userNames"
      },
      {
        "source": "/blockedMessages", "function": "blockedMessages"
      },
      {
        "source": "/shelf", "function": "shelf"
      },
      {
        "source": "/thumbnail", "function": "thumbnail"
      },
      {
        "source": "**", "destination": "/index.html"
      }
    ]
  }
}
